{{> privateNavBar }}
<section class="mt-4 border p-3 rounded-2 bg-light">
  <h2 class="text-center"> Hi {{user.username}}.Please use the form bellow to update your post</h2>
  <hr />
  <form class="mt-4" id="update-post-form">
    <div class="mb-3">
      <textarea
        type="text"
        class="form-control"
        id="title-input"
        placeholder="Enter your post title"
      >{{data.title}}</textarea>
      <textarea
        type="text"
        class="form-control"
        id="text-input"
        placeholder="Enter your post content..."
      >{{data.description}}</textarea>
    </div>
    <div class="mb-3 text-center text-danger error-text" id="add-post-container">
    </div>
    <div class="text-center">
      <button
        type="submit"
        class="btn btn-primary"
        id="update-post-btn"
        data-id={{id}}
      >Submit</button>
    </div>
  </form>
</section>